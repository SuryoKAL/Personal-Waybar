{
  "layer": "top",
  "position": "top",
  "height": 34,
  "spacing": 0,
  "margin-top": 4,
  "margin-bottom": 0,
  "margin-left": 12,
  "margin-right": 12,

  "modules-left": ["custom/swaync", "hyprland/workspaces", "clock", "custom/updates"],
  "modules-center": ["mpris", "custom/appmenu", "custom/cava"],
  "modules-right": ["group/system", "group/tray", "pulseaudio", "network", "custom/power"],


  "clock": {
      "format": "{:%H:%M}",
  },



  "custom/appmenu": {
        "format": "ó°£‡",
        "on-click": "wofi show --drun"
    },



  "custom/cava": {
        "format": "{}",
        "exec": "~/.config/waybar/waybar-cava/cava.sh"
    },

  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace e-1",
    "on-scroll-down": "hyprctl dispatch workspace e+1",
    "format": "{icon}",
    "format-icons": {
      "1": "î",
      "2": "î",
      "3": "î‘",
      "4": "î•",
      "5": "î›",
      "6": "î¢",
      "7": "î¤",
      "8": "î§",
      "9": "î¨",
      "10": "10"
    },
    "persistent-workspaces": {
      "*": 9
    }
  },

  "mpris": {
    "format": "  {player_icon} {dynamic}",
    "format-paused": "  {player_icon} {dynamic}",
    "player-icons": {
      "default": "â–¶",
      "mpv": "ğŸµ",
      "spotify": "ï†¼"
    },
    "dynamic-order": ["title", "artist"],
    "dynamic-len": 40,
    "max-length": 50
  },

  "custom/swaync": {
    "format": "{icon}",
    "on-click": "swaync-client -sw -op",
    "interval": 5,
    "tooltip-format": "{count} new notifications", // Customize tooltip (optional)
    "format-icons": {
        "default": "ó°Ÿ" // Replace with your preferred icon
    }
},




  "tray": {
    "icon-size": 16,
    "spacing": 8
  },

  "group/tray": {
    "format": "Tray",
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/tray-icon",
      "tray"
    ]
  },

  "custom/tray-icon": {
    "format": "  Tray",
    "tooltip": false
  },

  "group/system": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "cpu",
      "memory",
      "disk",
      "temperature"
    ]
  },

  "custom/updates": {
    "format": "ó°š°  {}",
    "interval": 3600,
    "exec": "checkupdates 2>/dev/null | wc -l",
    "exec-if": "exit 0",
    "on-click": "kitty -e sudo pacman -Syu",
    "signal": 8,
    "tooltip": true,
    "tooltip-format": "{} updates available"
  },


  "cpu": {
    "on-click": "kitty -e btop",
    "interval": 2,
    "format": "ï’¼  {usage}%",
    "max-length": 10
  },

  "memory": {
    "interval": 2,
    "format": "î¿…  {percentage}%",
    "max-length": 10
  },

  "disk": {
    "interval": 30,
    "format": "ï‚   {percentage_used}%",
    "path": "/"
  },

  "temperature": {
    "interval": 2,
    "critical-threshold": 80,
    "format": "ï‹‡ {temperatureC}Â°C"
  },

  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-muted": "  muted",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["î˜¸", "î˜¸", "î˜¸"]
    },
    "on-click": "kitty -e alsamixer"
  },

  "network": {
    "format-wifi": "ï‡«  {essid}",
    "format-ethernet": "  {ipaddr}",
    "format-disconnected": "  Disconnected",
    "tooltip-format": "{ifname}: {ipaddr}/{cidr}",
    "on-click": "kitty -e nmtui"
  },

  "custom/power": {
    "format": " â» ",
    "tooltip": false,
    "on-click": "wlogout"
  }
}
